{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "types": ["react-native", "expo"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "."
  },
  "include": ["src", "App.tsx", "app", "index.ts", "index.tsx", "expo-env.d.ts"],
  "exclude": ["node_modules", "dist", "web-build", ".expo"]
}
